ZombieSpeed() {
  level endon("end_game");
  for (;;) {
    level.Enemies = get_round_enemy_array().size + level.zombie_total;
    if (self.Enemies <= 5) {
      foreach(zombie in getaiarray(level.zombie_team)) {
			  zombie maps\mp\zombies\_zm_utility::set_zombie_run_cycle("walk");
      }
    } else {
      if (level.round_number >= 10) {
        foreach(zombie in getaiarray(level.zombie_team)) {
			    zombie maps\mp\zombies\_zm_utility::set_zombie_run_cycle("sprint"); 
		    }
      } else {
        foreach(zombie in getaiarray(level.zombie_team)) {
			    zombie maps\mp\zombies\_zm_utility::set_zombie_run_cycle("walk"); 
		    }
      }
    } wait 0.05;
  }
}
